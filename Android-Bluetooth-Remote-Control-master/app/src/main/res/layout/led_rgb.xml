<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffecf0f1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <SeekBar
        android:id="@id/seekBar1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/seekBar2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/buttonshape"
        android:max="255"
        android:progress="1" />

    <SeekBar
        android:id="@id/seekBar3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/blue"
        android:layout_marginTop="15.0dip"
        android:max="255"
        android:progress="1" />

    <SeekBar
        android:id="@+id/seekBar2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/seekBar3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/green"
        android:indeterminate="false"
        android:layout_marginTop="15.0dip"
        android:max="255"
        android:progress="1" />

    <TextView
        android:id="@id/color"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/seekBar3"
        android:layout_marginTop="43.0dip"
        android:height="80.0dip"
        android:background="#ffe8e8e8"
        android:gravity="center" />

    <TextView
        android:id="@id/hex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/green"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60.0dip"
        android:text="HEX"

        android:textColor="#ff34495e"
        android:textSize="25.0dip" />

    <TextView
        android:id="@id/red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="R"
        android:textColor="#ffe74c3c"
        android:textSize="25.0dip" />

    <TextView
        android:id="@id/green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/red"
        android:layout_centerHorizontal="true"
        android:text="G"
        android:textColor="#ff2ecc71"
        android:textSize="25.0dip" />

    <TextView
        android:id="@id/blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/green"
        android:layout_alignBottom="@id/green"
        android:layout_alignRight="@id/color"
        android:layout_marginRight="18.0dip"
        android:text="B"
        android:textColor="#ff3498db"
        android:textSize="25.0dip" />
</RelativeLayout>